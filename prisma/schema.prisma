// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id             Int     @id @default(autoincrement())
  nome           String  @db.VarChar(120)
  sobrenome      String? @db.VarChar(120)
  sexo           String  @db.Char(1)
  data_nacimento String? @db.VarChar(11)
  token          String  @db.VarChar(200)
  cargo          String  @db.VarChar(90)
  senha          String  @db.VarChar(200)
  email          String  @db.VarChar(80)

  telefone Telefone[]
  venda    Venda[]

  @@map("usuario")
}

model Telefone {
  id     Int    @id @default(autoincrement())
  numero String @db.VarChar(20)

  usuario_id Int?
  usuario    Usuario? @relation(fields: [usuario_id], references: [id])

  @@map("telefone")
}

model Produto {
  id        Int    @id @default(autoincrement())
  nome      String @db.VarChar(150)
  preco     Float
  cod_barra String @db.VarChar(120)
  qtd_min   Int    @default(10)
  lote      String @db.VarChar(120)

  venda Venda[]

  @@map("produto")
}

model Venda {
  id Int @id @default(autoincrement())

  produto_id Int
  produto    Produto @relation(fields: [produto_id], references: [id])
  usuario_id Int
  usuario    Usuario @relation(fields: [usuario_id], references: [id])

  qtd_vendida Int
  data_venda  String @db.VarChar(11)

  @@map("venda")
}
