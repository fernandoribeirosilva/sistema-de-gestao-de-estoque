<%- include('../partials/head') %>
<div class="container">
  <%- include('../partials/menu', {ativoMenu, user}) %>
  <%-include('../partials/header', { user }) %>

  <div class="body">
    <div class="area-erro">
      <% if (mensagem !== "") { %>
      <div class="mensagem-<%=typeError%>"><%=mensagem%></div>
      <% } %>
    </div>

    <div class="container-body">
      <div class="search">
        <form action="/pesquisa/pruduto" method="post">
          <input type="search" placeholder="Pesquisar" name="searchTerm" />
          <button type="submit" class="btn-search">
            <i class="ph-magnifying-glass-bold"></i>
          </button>
        </form>
      </div>

      <% if (produtos.produto) { %>
        <div class="data-produto">
          <div class="area-table">
            <%-include('../partials/tabelaProdutos', {produtos: produtos.produto, pageCount: produtos.pageCount}) %>
            <%-include('../partials/modal') %>
            <div class="area-pagination">
              <% for( let i = 0; i < produtos.pageCount; i++ ) { %>
                <a class="<%=  i === produtos.currentPage ? 'ativo' : '' %>" href="http://localhost:3000/?page=<%=i%>"><%=i+1%></a>
              <% } %>
            </div>
          </div>
        </div>
      <% } else { %>
        <div class="data-produto">
          <%-include('../partials/tabelaProdutos', {produtos})%>
          <%-include('../partials/modal') %>
        </div>
      <% } %>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>
