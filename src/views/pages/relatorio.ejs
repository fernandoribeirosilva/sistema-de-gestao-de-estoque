  <div class="area-date">
        <div class="date-inicio">
          <span>De:</span>
          <input type="date" name="dateInicio" id="dateInicio" />
        </div>
        <div class="date-fim">
          <span>Ate:</span>
          <input type="date" name="dateFim" id="dateFim" />
        </div>
        <div class="btn-buscar">Buscar</div>
      </div>
 -->
    </div>
  </div>
</div>
