// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int     @id @default(autoincrement())
  nome      String  @db.VarChar(120)
  sobrenome String? @db.VarChar(120)
  senha     String  @db.VarChar(200)
  cpf       String  @unique @db.VarChar(15)

  Telefone Telefone[]
  cargo_id Int
  Cargo    Cargo      @relation(fields: [cargo_id], references: [id])
  venda    Venda[]

  @@map("usuario")
}

model Telefone {
  id     Int    @id @default(autoincrement())
  numero String @unique @db.VarChar(20)

  usuario_id Int
  Usuario    Usuario @relation(fields: [usuario_id], references: [id])

  @@map("telefone")
}

model Cargo {
  id      Int       @id @default(autoincrement())
  nome    String    @unique @db.VarChar(90)
  Usuario Usuario[]

  @@map("cargo")
}

model Produto {
  id         Int     @id @default(autoincrement())
  nome       String  @db.VarChar(150)
  preco      Float
  quantidade Int
  lote       String  @db.VarChar(120)
  tamanho    String  @db.VarChar(30)
  Venda      Venda[]

  @@map("produto")
}

model Venda {
  id Int @id @default(autoincrement())

  usuario_id  Int
  usuario     Usuario  @relation(fields: [usuario_id], references: [id])
  produto_id  Int
  produto     Produto  @relation(fields: [produto_id], references: [id])
  qtd_vendida Int
  data_venda  DateTime @default(now())

  @@map("venda")
}
